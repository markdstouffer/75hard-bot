{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@utils/*": [
        "utils/*"
      ],
      "@internalTypes/database": [
        "types/database/index.ts"
      ],
      "@internalTypes/shared": [
        "types/shared/index.ts"
      ],
      "@services/*": [
        "services/*"
      ]
    }
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
